<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?colorAccent">

        <ImageView
            android:id="@+id/back"
            android:clickable="true"
            android:focusable="true"
            android:padding="15dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_white_black"
            android:layout_marginStart="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="?WhiteBlack"
            android:textStyle="bold"
            android:layout_marginTop="-20dp"
            android:textSize="24sp"
            android:textAllCaps="true"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version X.X.X"
            android:textColor="?WhiteBlack"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"/>

        <View
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:background="?WhiteBlack"
            android:layout_marginBottom="7dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="7dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:background="@drawable/rounded_about">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_writer_logo_dribbble"/>

        </FrameLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:background="?WhiteBlack"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="7dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?WhiteBlack"
                android:textSize="22sp"
                android:layout_marginTop="5dp"
                android:text="Made with"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_favorite"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?WhiteBlack"
                android:textSize="22sp"
                android:layout_marginTop="5dp"
                android:text="In Bangladesh"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="15dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/ic_facebook"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#888888"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="15dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/ic_twitter"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#888888"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="15dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/ic_instagram"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#888888"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/github"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="15dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/ic_github"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888888"/>

</LinearLayout>