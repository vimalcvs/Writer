<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="BlackWhite">@color/colorBlack</item>
        <item name="WhiteBlack">@color/colorWhite</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="IconBack">@color/iconWhite</item>
        <item name="TabColor">@color/tabOnWhite</item>
        <item name="chipStyle">@style/Chip_Style</item>
        <item name="CBack">#EDEDED</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="BlackWhite">@color/colorWhite</item>
        <item name="WhiteBlack">@color/colorBlack</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="IconBack">@color/iconBlack</item>
        <item name="TabColor">@color/tabOnBlack</item>
        <item name="chipStyle">@style/Chip_Style</item>
        <item name="CBack">#292929</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="Chip_Style" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_chip_color</item>
        <item name="android:textColor">@color/text_chip_color</item>
        <item name="checkedIconVisible">true</item>
        <item name="checkedIcon">@drawable/check_circle_white</item>
    </style>

</resources>